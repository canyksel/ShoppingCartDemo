<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET E-Cart</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#65d113">
        <div class="container" style="background-color:#65d113">
            <div class="navbar-header" style="background-color:#65d113">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color:#65d113">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("E-Cart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Anasayfa", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("İletişim", "Contact", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Hakkımızda", "About", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Servis", "Service", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Ürünler", "Index", "Item")
                    </li>
                    <li>
                        @Html.ActionLink("Alışveriş", "Index", "Shopping")
                    </li>
                </ul>
                @Html.Partial("_ShoppingCart")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET E-Cart</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>